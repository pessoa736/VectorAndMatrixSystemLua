{
    "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
    "runtime": {
        "version": "Lua 5.4",
        "path": [
            "?.lua"
        ]
    },
    "workspace": {
        "library": [
            "types"
        ],
        "ignoreDir": [
            "vectors",
            "matrix"
        ],
        "checkThirdParty": false
    },
    "diagnostics": {
        "disable": [
            "lowercase-global"
        ]
    },
    "hint": {
        "enable": true,
        "setType": true,
        "paramName": "All"
    },
    "type": {
        "castNumberToInteger": true
    }
}
